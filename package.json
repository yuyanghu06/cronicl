{
  "name": "cronicl-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean && npm run db:generate",
    "start": "npm run db:push && node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.1000.0",
    "@hono/node-server": "^1.13.7",
    "bullmq": "^5.70.1",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.12.3",
    "ioredis": "^5.10.0",
    "postgres": "^3.4.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
